<?xml version="1.0"?>
<config>
    <modules>
        <AW_Eventbooking>
            <version>1.2.0</version>
        </AW_Eventbooking>
    </modules>
    <global>
        <blocks>
            <aw_eventbooking>
                <class>AW_Eventbooking_Block</class>
            </aw_eventbooking>
        </blocks>
        <helpers>
            <aw_eventbooking>
                <class>AW_Eventbooking_Helper</class>
            </aw_eventbooking>
        </helpers>
        <models>
            <aw_eventbooking>
                <class>AW_Eventbooking_Model</class>
                <resourceModel>aw_eventbooking_resource</resourceModel>
            </aw_eventbooking>
            <aw_eventbooking_resource>
                <class>AW_Eventbooking_Model_Resource</class>
                <entities>
                    <event>
                        <table>aw_eventbooking_event</table>
                    </event>
                    <event_attribute>
                        <table>aw_eventbooking_event_attribute</table>
                    </event_attribute>
                    <event_ticket>
                        <table>aw_eventbooking_event_ticket</table>
                    </event_ticket>
                    <event_ticket_attribute>
                        <table>aw_eventbooking_event_ticket_attribute</table>
                    </event_ticket_attribute>
                    <order_history>
                        <table>aw_eventbooking_order_history</table>
                    </order_history>
                    <ticket>
                        <table>aw_eventbooking_ticket</table>
                    </ticket>
                </entities>
            </aw_eventbooking_resource>
            <catalog>
                <rewrite>
                    <product_option_type_text>AW_Eventbooking_Model_Product_Option_Type_Text</product_option_type_text>
                </rewrite>
            </catalog>
        </models>
        <resources>
            <aw_eventbooking_setup>
                <setup>
                    <module>AW_Eventbooking</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </aw_eventbooking_setup>
            <aw_eventbooking_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </aw_eventbooking_write>
            <aw_eventbooking_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </aw_eventbooking_read>
        </resources>
        <events>
            <catalog_product_load_after>
                <observers>
                    <aw_eventbooking_catalog_product_load_after>
                        <class>aw_eventbooking/observer</class>
                        <method>catalogProductLoadAfter</method>
                    </aw_eventbooking_catalog_product_load_after>
                </observers>
            </catalog_product_load_after>
            <sales_quote_item_collection_products_after_load>
                <observers>
                    <aw_eventbooking_sales_quote_item_collection_products_after_load>
                        <class>aw_eventbooking/observer</class>
                        <method>salesQuoteItemCollectionProductsAfterLoad</method>
                    </aw_eventbooking_sales_quote_item_collection_products_after_load>
                </observers>
            </sales_quote_item_collection_products_after_load>
            <catalog_product_type_prepare_full_options>
                <observers>
                    <aw_eventbooking_catalog_product_type_prepare_full_options>
                        <class>aw_eventbooking/observer</class>
                        <method>catalogProductTypePrepareFullOptions</method>
                    </aw_eventbooking_catalog_product_type_prepare_full_options>
                </observers>
            </catalog_product_type_prepare_full_options>
            <!--for compatible with magento 1.4.x -->
            <catalog_product_type_prepare_cart_options>
                <observers>
                    <aw_eventbooking_catalog_product_type_prepare_cart_options>
                        <class>aw_eventbooking/observer</class>
                        <method>catalogProductTypePrepareFullOptions</method>
                    </aw_eventbooking_catalog_product_type_prepare_cart_options>
                </observers>
            </catalog_product_type_prepare_cart_options>
            <!-- /for compatible with magento 1.4.x -->
            <sales_model_service_quote_submit_before>
                <observers>
                    <aw_eventbooking_sales_model_service_quote_submit_before>
                        <class>aw_eventbooking/observer</class>
                        <method>salesModelServiceQuoteSubmitBefore</method>
                    </aw_eventbooking_sales_model_service_quote_submit_before>
                </observers>
            </sales_model_service_quote_submit_before>
            <core_block_abstract_to_html_before>
                <observers>
                    <aw_eventbooking_core_block_abstract_to_html_before>
                        <class>aw_eventbooking/observer</class>
                        <method>coreBlockAbstractToHtmlBefore</method>
                    </aw_eventbooking_core_block_abstract_to_html_before>
                </observers>
            </core_block_abstract_to_html_before>
            <controller_action_predispatch_checkout_onepage_saveOrder>
                <observers>
                    <aw_eventbooking_checkout_onepage_saveOrder_predispatch>
                        <class>aw_eventbooking/observer</class>
                        <method>checkoutOnepageSaveOrderPredispatch</method>
                    </aw_eventbooking_checkout_onepage_saveOrder_predispatch>
                </observers>
            </controller_action_predispatch_checkout_onepage_saveOrder>
            <controller_action_predispatch_checkout_multishipping_overviewPost>
                <observers>
                    <aw_eventbooking_checkout_multishipping_overviewPost_predispatch>
                        <class>aw_eventbooking/observer</class>
                        <method>checkoutMultishippingOverviewPostPredispatch</method>
                    </aw_eventbooking_checkout_multishipping_overviewPost_predispatch>
                </observers>
            </controller_action_predispatch_checkout_multishipping_overviewPost>
            <controller_action_predispatch_onestepcheckout_ajax_placeOrder>
                <observers>
                    <aw_eventbooking_onestepcheckout_ajax_placeOrder_predispatch>
                        <class>aw_eventbooking/observer</class>
                        <method>onestepcheckoutAjaxPlaceOrderPredispatch</method>
                    </aw_eventbooking_onestepcheckout_ajax_placeOrder_predispatch>
                </observers>
            </controller_action_predispatch_onestepcheckout_ajax_placeOrder>
            <wishlist_item_collection_products_after_load>
                <observers>
                    <aw_eventbooking_wishlist_item_collection_products_after_load>
                        <class>aw_eventbooking/observer</class>
                        <method>wishlistItemCollectionProductsAfterLoad</method>
                    </aw_eventbooking_wishlist_item_collection_products_after_load>
                </observers>
            </wishlist_item_collection_products_after_load>
            <sales_model_service_quote_submit_after>
                <observers>
                    <aw_eventbooking_sales_model_service_quote_submit_after>
                        <class>aw_eventbooking/observer</class>
                        <method>salesModelServiceQuoteSubmitAfter</method>
                    </aw_eventbooking_sales_model_service_quote_submit_after>
                </observers>
            </sales_model_service_quote_submit_after>
            <checkout_submit_all_after>
                <observers>
                    <aw_eventbooking_checkout_multishipping_all_after>
                        <class>aw_eventbooking/observer</class>
                        <method>checkoutSubmitMultipleOrders</method>
                    </aw_eventbooking_checkout_multishipping_all_after>
                </observers>
            </checkout_submit_all_after>
            <checkout_cart_update_items_before>
                <observers>
                    <aw_eventbooking_checkout_cart_update_items_before>
                        <class>aw_eventbooking/observer</class>
                        <method>checkoutCartUpdateItemsBefore</method>
                    </aw_eventbooking_checkout_cart_update_items_before>
                </observers>
            </checkout_cart_update_items_before>
            <sales_order_invoice_pay>
                <observers>
                    <aw_eventbooking_sales_order_invoice_pay>
                        <class>aw_eventbooking/observer</class>
                        <method>salesOrderInvoicePay</method>
                    </aw_eventbooking_sales_order_invoice_pay>
                </observers>
            </sales_order_invoice_pay>
        </events>
        <template>
            <email>
                <aw_eventbooking_template_confirm translate="label">
                    <label>[aW Event Ticket] Event Ticket Confirmation</label>
                    <file>aw_eventbooking/confirm.html</file>
                    <type>html</type>
                </aw_eventbooking_template_confirm>
                <aw_eventbooking_template_reminder translate="label">
                    <label>[aW Event Ticket] Event Reminder</label>
                    <file>aw_eventbooking/reminder.html</file>
                    <type>html</type>
                </aw_eventbooking_template_reminder>
            </email>
        </template>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <aweventbooking after="Mage_Adminhtml">AW_Eventbooking_Adminhtml</aweventbooking>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <aw_eventbooking>
                    <file>aw_eventbooking.xml</file>
                </aw_eventbooking>
            </updates>
        </layout>
        <acl>
            <resources>
                <admin>
                    <children>
                        <catalog>
                            <children>
                                <aw_eventbooking translate="title">
                                    <title>Event Tickets</title>
                                    <sort_order>100</sort_order>
                                    <children>
                                        <product_tab translate="title">
                                            <title>Event Tickets Product Tab</title>
                                            <sort_order>10</sort_order>
                                        </product_tab>
                                        <products translate="title">
                                            <title>Manage Products</title>
                                            <sort_order>20</sort_order>
                                        </products>
                                        <tickets translate="title">
                                            <title>Manage Tickets</title>
                                            <sort_order>20</sort_order>
                                        </tickets>
                                    </children>
                                </aw_eventbooking>
                            </children>
                        </catalog>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <aw_eventbooking>
                                            <title>aheadWorks Event Tickets Section</title>
                                        </aw_eventbooking>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <events>
            <catalog_product_save_before>
                <observers>
                    <aw_eventbooking_catalog_product_save_before>
                        <class>aw_eventbooking/observer</class>
                        <method>catalogProductSaveBefore</method>
                    </aw_eventbooking_catalog_product_save_before>
                </observers>
            </catalog_product_save_before>
            <catalog_product_save_after>
                <observers>
                    <aw_eventbooking_catalog_product_save_after>
                        <class>aw_eventbooking/observer</class>
                        <method>catalogProductSaveAfter</method>
                    </aw_eventbooking_catalog_product_save_after>
                </observers>
            </catalog_product_save_after>
            <controller_action_layout_render_before_adminhtml_catalog_product_edit>
                <observers>
                    <aw_eventbooking_controller_action_layout_render_before_adminhtml_catalog_product_edit>
                        <class>aw_eventbooking/observer</class>
                        <method>controllerActionLayoutRenderBeforeAdminhtmlCatalogProductEdit</method>
                    </aw_eventbooking_controller_action_layout_render_before_adminhtml_catalog_product_edit>
                </observers>
            </controller_action_layout_render_before_adminhtml_catalog_product_edit>
            <catalog_product_collection_load_after>
                <observers>
                    <aw_eventbooking_product_collection_load_after>
                        <class>aw_eventbooking/observer</class>
                        <method>productCollectionLoadAfter</method>
                    </aw_eventbooking_product_collection_load_after>
                </observers>
            </catalog_product_collection_load_after>
        </events>
        <translate>
            <modules>
                <AW_Eventbooking>
                    <files>
                        <default>AW_Eventbooking.csv</default>
                    </files>
                </AW_Eventbooking>
            </modules>
        </translate>
        <menu>
            <catalog>
                <children>
                    <aw_eventbooking module="aw_eventbooking" translate="title">
                        <title>Event Tickets</title>
                        <sort_order>100</sort_order>
                        <children>
                            <products translate="title">
                                <title>Manage Products</title>
                                <sort_order>10</sort_order>
                                <action>adminhtml/aweventbooking_products/list</action>
                            </products>
                            <tickets translate="title">
                                <title>Manage Tickets</title>
                                <sort_order>20</sort_order>
                                <action>adminhtml/aweventbooking_tickets/list</action>
                            </tickets>
                            <settings translate="title">
                                <title>Settings</title>
                                <sort_order>100</sort_order>
                                <action>adminhtml/system_config/edit/section/aw_eventbooking</action>
                            </settings>
                        </children>
                    </aw_eventbooking>
                </children>
            </catalog>
        </menu>
    </adminhtml>
    <frontend>
        <translate>
            <modules>
                <AW_Eventbooking>
                    <files>
                        <default>AW_Eventbooking.csv</default>
                    </files>
                </AW_Eventbooking>
            </modules>
        </translate>
        <layout>
            <updates>
                <aw_eventbooking>
                    <file>aw_eventbooking.xml</file>
                </aw_eventbooking>
            </updates>
        </layout>
        <routers>
            <aw_eventbooking>
                <use>standard</use>
                <args>
                    <module>AW_Eventbooking</module>
                    <frontName>aw_eventbooking</frontName>
                </args>
            </aw_eventbooking>
            <aw_eventbooking_external>
                <use>standard</use>
                <args>
                    <module>AW_Eventbooking</module>
                    <frontName>aweb_ext</frontName>
                </args>
            </aw_eventbooking_external>
        </routers>
    </frontend>
    <crontab>
        <jobs>
            <aw_eventbooking_reminder>
                <schedule>
                    <cron_expr>0 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>aw_eventbooking/cron::eventReminder</model>
                </run>
            </aw_eventbooking_reminder>
        </jobs>
    </crontab>
    <default>
        <aw_eventbooking>
            <general>
                <allow_buy>0</allow_buy>
            </general>
            <qr>
                <width>200</width>
            </qr>
        </aw_eventbooking>
    </default>
</config>
